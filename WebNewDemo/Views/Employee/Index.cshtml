@model IEnumerable<WebNewDemo.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="Create">Create</a>

<table >
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Salary</th>
    </tr>
    @foreach(var item in Model){
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.salary</td>
        <td><a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</a> </td>
         <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
    </tr>
    }
</table>

